<?xml version="1.0" encoding="UTF-8"?>
<server>
    <properties>
        <property name="druid.logType" value="log4j2" />
    </properties>
    <address value="localhost" />
    <port value="6677" />
    <thread-pool>
        <common size="100" />
        <schedule size="10" />
    </thread-pool>
    <security username="admin" password="admin" />
    <init>
        <provider class="cn.framework.core.container.ServerInitProvider" />
        <provider class="cn.framework.core.log.LogInitProvider" />
        <provider class="cn.framework.core.container.WebAppInitProvider" />
        <provider class="cn.framework.core.container.MonitorInitProvider" />
        <provider class="cn.framework.core.container.SpringInitProvider" />
    </init>
    <servlets>
        <servlet name="default" class="org.apache.catalina.servlets.DefaultServlet" pattern="/*">
            <param name="debug" value="1" />
            <param name="listing" value="true" />
            <param name="gzip" value="true" />
            <loadOnStartup>1</loadOnStartup>
        </servlet>
        <!--<servlet-mapping>-->
        <!--<servlet-name>Manager</servlet-name>-->
        <!--<url-pattern>/text/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <!--<servlet-mapping>-->
        <!--<servlet-name>Status</servlet-name>-->
        <!--<url-pattern>/status/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <!--<servlet-mapping>-->
        <!--<servlet-name>JMXProxy</servlet-name>-->
        <!--<url-pattern>/jmxproxy/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <!--<servlet-mapping>-->
        <!--<servlet-name>HTMLManager</servlet-name>-->
        <!--<url-pattern>/html/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <servlet name="manager" class="org.apache.catalina.manager.ManagerServlet" pattern="/manager/text/*">
            <param name="debug" value="2" />
        </servlet>
        <servlet name="status" class="org.apache.catalina.manager.StatusManagerServlet" pattern="/manager/status/*">
            <param name="debug" value="2" />
        </servlet>
        <servlet name="html-manager" class="org.apache.catalina.manager.HTMLManagerServlet" pattern="/manager/html/*">
            <param name="debug" value="2" />
        </servlet>
        <!--<servlet-mapping>-->
        <!--<servlet-name>HostManager</servlet-name>-->
        <!--<url-pattern>/text/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <!--<servlet-mapping>-->
        <!--<servlet-name>HTMLHostManager</servlet-name>-->
        <!--<url-pattern>/html/*</url-pattern>-->
        <!--</servlet-mapping>-->
        <servlet name="host-manager" class="org.apache.catalina.manager.host.HostManagerServlet" pattern="/host-manager/text/*">
            <param name="debug" value="2" />
        </servlet>
        <servlet name="htmlhost-manager" class="org.apache.catalina.manager.host.HTMLHostManagerServlet" pattern="/host-manager/html/*">
            <param name="debug" value="2" />
        </servlet>
    </servlets>
</server>