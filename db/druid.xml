<?xml version="1.0" encoding="UTF-8"?>
<server>
    <context-params>
        <context-param name="contextConfigLocation" value="file:${conf.dir}/spring.xml" />
    </context-params>
    <properties>
        <property name="druid.logType" value="log4j2" /><!-- -Ddruid.logType=log4j2-->
    </properties>
    <listeners>
        <listener class="org.springframework.web.context.ContextLoaderListener" />
        <listener class="cn.framework.core.utils.Springs$ContextRegister" />
    </listeners>
    <address value="localhost" />
    <port value="6677" />
    <thread-pool>
        <common size="100" />
        <schedule size="10" />
    </thread-pool>
    <spring src="file:${conf.dir}/spring.xml" />
    <web-apps>
        <web-app path="/Users/junrayz/Documents/html5" pattern="/static" />
    </web-apps>
    <security username="admin" password="admin" />
    <init>
        <provider class="cn.framework.core.container.ServerInitProvider" />
        <provider class="cn.framework.core.log.LogInitProvider" />
        <provider class="cn.framework.core.container.WebAppInitProvider" />
        <provider class="cn.framework.core.container.MonitorInitProvider" />
        <!--<provider class="cn.framework.core.container.SpringInitProvider" />-->
        <!--<provider class="cn.framework.db.init.DruidInitProvider" />-->
    </init>
    <servlets>
        <servlet name="default" class="org.apache.catalina.servlets.DefaultServlet" pattern="/*">
            <param name="debug" value="0" />
            <param name="listing" value="true" />
            <loadOnStartup>1</loadOnStartup>
        </servlet>
        <!--<servlet name="beans-init" class="cn.framework.core.utils.Springsgs$ContextRegister">-->
        <!--<loadOnStartup>1</loadOnStartup>-->
        <!--</servlet>-->
        <servlet name="DruidStatView" class="com.alibaba.druid.support.http.StatViewServlet" pattern="/druid/*">
            <param name="loginUsername" value="admin" />
            <param name="loginPassword" value="admin" />
            <param name="resetEnable" value="false" />
        </servlet>
        <servlet name="druid-test" class="cn.framework.db.init.DruidServlet" pattern="/test" />
    </servlets>
    <filters>
        <filter name="DruidWebStatFilter" class="com.alibaba.druid.support.http.WebStatFilter" pattern="/*">
            <param name="exclusions" value="*.js,*.gif,*.jpg,*.png,*.css,*.ico,/druid/*" />
            <param name="sessionStatEnable" value="true" />
            <param name="profileEnable" value="true" />
        </filter>
    </filters>
</server>